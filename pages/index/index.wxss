/**index.wxss**/
@import "../../components/common/removeScrollbar.wxss";

.l-news-list .l-news-list__li {
    padding: 10px 5px;
    border-bottom: 1px solid #d3d3d3;
}
.l-news-list .l-news-list__li:nth-last-child(1) {
    border-bottom: 0;
}
.l-news-bor {
    display: flex;
    flex-direction: row-reverse;
}
.l-news-bor-w{
    width: 69%;
    margin-left: 2%;
}
.l-news-tit {
    font-size: 14px;
    line-height: 1.5;
    max-width: 100%;
    height: 42px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.l-news-time {
    font-size: 12px;
    color: #888;
    margin-top: 8px;
    display: flex;
    justify-content: flex-end;
}
.l-news-bor-img{
    width: 100px;
    overflow: hidden;
}
.l-news-bor-img image {
    width: 100px;
    height: 66px;
}
.scroll-tabbar .tabbar-item.active {
    color: #f66732;
}