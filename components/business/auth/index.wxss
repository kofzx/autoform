/* components/business/auth/index.wxss */
@import '../../common/com.wxss';

.scope-box {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 72%;
  height: 280rpx;
  background: white;
  justify-content: space-around;
  z-index: 2;
  border-radius: 4px;
}
.scope-box__info {
  width: 100%;
  height: 100rpx;
}
.scope-box__info .txt {
  color: #4A92FF;
  font-size: 15px;
}
.scope-box__info .cry {
  width: 66rpx;
  height: 66rpx;
  margin-right: 20rpx;
}
.scope-box__auth-btn {
  font-size: 14px;
  padding: 0 2.8em;
  margin: 0;
  line-height: 2.4;
  border: 1px solid #4A92FF;
  border-radius: 30px;
  background: white;
  color: #4A92FF;
  margin-bottom: 10px;
}